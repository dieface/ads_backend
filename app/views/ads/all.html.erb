<h1>Ads</h1>
<table>
  <thead>
    <tr>
	    <th>Id</th>
      <th>Scale</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Url</th>
      <th>Title</th>
      <th>Description</th>
      <th>User Id</th>
      <th>Photo</th>
      <th>Op</th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
    <tr>
      <td> <%= ad.id %> </td>
      <td> <%= ad.scale %> </td>
      <td> <%= ad.start_date %> </td>
      <td> <%= ad.end_date %> </td>
      <td> <%= ad.lat %> </td>
      <td> <%= ad.lng %> </td>
      <td> <%= ad.url %> </td>
      <td> <%= ad.title %> </td>
      <td> <%= ad.description %> </td>
      <td> <%= ad.user_id %> </td>
      <td> 
        <%= render_ad_photo(ad.default_photo) %>
      </td>
      <td> 
        <%= link_to("Delete", ad_path(ad), :method => :delete) %>
      </td>      
    </tr>
    <% end %>

  </tbody>
</table>